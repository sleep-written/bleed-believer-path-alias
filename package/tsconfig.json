{
    "compilerOptions": {
        "target": "ES2024",
        "module": "Node16",
        "esModuleInterop": true,
        "moduleResolution": "Node16",
        
        "strict": true,
        "skipLibCheck": true,
        "verbatimModuleSyntax": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,

        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./src",

        "paths": {
            "@tool/*": [ "./tool/*" ],
            "@/*": [ "./*" ]
        }
    }
}