{
    "compilerOptions": {
        "target": "ES2024",
        "module": "Node16",
        "esModuleInterop": true,
        "moduleResolution": "Node16",

        "declaration": true,
        "emitDeclarationOnly": true,

        "strict": true,
        "skipLibCheck": true,
        "verbatimModuleSyntax": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    }
}